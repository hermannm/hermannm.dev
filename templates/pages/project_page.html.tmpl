<!doctype html>
<html lang="en-US">
  {{- template "head.html.tmpl" .Meta -}}
  <body
    class="mb-4 ml-[var(--content-margin)] mr-[var(--content-margin)] mt-4 flex min-h-[var(--page-height)] max-w-[var(--content-width)] flex-col gap-4 bg-gruvbox-bg0 font-main leading-[normal] text-gruvbox-fg"
  >
    <h1 class="flex justify-center text-3xl font-bold"><a href="/">hermannm.dev</a></h1>

    <div class="flex flex-col gap-3">
      <div class="project-banner">
        {{- if .Project.IconPath -}}
          <img width="50" height="50" src="{{ .Project.IconPath }}" alt="{{ .Project.IconAlt }}" />
        {{- end -}}
        <h2 class="text-lg [&:first-child]:ml-1">{{ .Project.Name }}</h2>
      </div>

      {{- template "project_info.html.tmpl" .Project -}}
    </div>

    {{ template "footer.html.tmpl" .Meta.Common }}
  </body>
</html>
